@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Ekle</div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="ProductName">Ürün Adı</label>
                                <input type="text" class="form-control " asp-for="ProductName" id="ProductName">
                            </div>
                            <div class="form-group">
                                <label for="Description">Ürün Açıklaması</label>
                                <input type="text" class="form-control " asp-for="Description" id="Description">
                            </div>
                            <div class="form-group">
                                <label for="Price">Ürün Fiyatı</label>
                                <input type="number" class="form-control " asp-for="Price" id="Price">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Ürün Görseli</label>
                                <input type="text" class="form-control " asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="CategoryName">Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryId,(List<SelectListItem>)ViewBag.categoryValue,new {@class="form-control"})
                            </div>
                            <div class="form-group">
                                <label for="CategoryStatus">Durum</label>
                                <select class="form-control form-control" asp-for="Status" id="CategoryStatus">
                                    <option value="false">Beklet</option>
                                    <option value="true">İşleme Al</option>

                                </select>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürünü Ekle</button>
                            <a href="/Category/Index/" class="btn btn-danger">İptal Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

