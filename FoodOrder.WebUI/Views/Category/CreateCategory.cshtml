@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Ekle</div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="CategoryName">Kategori Adı</label>
                                <input type="text" class="form-control form-control" asp-for="CategoryName" id="CategoryName" >
                            </div>
                            <div class="form-group">
                                <label for="CategoryStatus">Durum</label>
                                <select class="form-control form-control" asp-for="Status" id="CategoryStatus">
                                    <option value="false">Beklet</option>
                                    <option value="true">İşleme Al</option>

                                </select>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ekle</button>
                            <a href="/Category/Index/" class="btn btn-danger">İptal Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


