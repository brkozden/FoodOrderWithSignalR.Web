 @model List<ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<a class="btn btn-success text-white" href="/Category/CreateCategory/">Yeni Kategori Ekle</a>

					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.CategoryName</td>
										@if(item.Status == false)
										{
											<td>Beklemede</td>
										}
										else
										{
											<td>İşleme Alındı</td>
										}

										<td><a class="btn btn-outline-danger" href="/Category/RemoveCategory/@item.CategoryId">Sil</a></td>
										<td><a class="btn btn-outline-primary" href="/Category/UpdateCategory/@item.CategoryId">Güncelle</a></td>



									
									</tr>
								}
								
								
							</tbody>
						</table>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>

 