@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkında Bilgisi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkında Bilgileri</div>
                    </div>			

                    <div class="card-body">
                        <div class="card-sub">
                            Hakkında Bilgisi ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fotoğraf</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a class="btn btn-outline-danger" href="/About/RemoveAbout/@item.AboutId">Sil</a></td>
                                        <td><a class="btn btn-outline-primary" href="/About/UpdateAbout/@item.AboutId">Güncelle</a></td>




                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                    <a class="btn btn-success text-white" href="/About/CreateAbout/">Yeni Hakkımda Bilgisi Ekle</a>

                </div>

            </div>

        </div>
    </div>
</div>

