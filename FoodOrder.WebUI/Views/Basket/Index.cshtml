@model List<ResultBasketDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    decimal basketTotalPrice = 0;
    decimal basketTotalPriceWithTax = 18;
}

</div>
<link href="~/ui/css/basket.css" rel="stylesheet" />

<br />
<br />
<div class="card ">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Sepetiniz</b></h4></div>
                    <div class="col align-self-center text-right text-muted">@ViewBag.productCount ürün listeleniyor</div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                basketTotalPrice = Model.Sum(x => x.Price);
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" src="@item.ImageUrl"></div>
                        <div class="col">
                            <div class="row">@item.ProductName</div>
                            <div class="row text-muted " style="font-size:.8rem"><code>@item.CategoryName</code></div>
                        </div>

                        <div class="col">
                            @item.Price ₺ <span class="close"><a href="/Basket/RemoveProduct/@item.BasketId" style="cursor:pointer !important">&#10005;</a></span>

                </div>
                    </div>
                </div>
                basketTotalPriceWithTax = basketTotalPrice*108/100;
            }

           

            <div class="back-to-shop"><a href="/Default/Index/">&leftarrow;<span class="text-muted"> Alışverişe Devam Et</span></a></div>
        </div>
        <div class="col-md-4 summary">
            <div><h5><b>Toplam Tutar</b></h5></div>
            <hr>
            <form>
                <input id="code" class="" placeholder="Kupon Kodunu Girin">
                <button type="button" class="btn btn-outline-dark ">Kuponu Uygula</button>
            </form>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col" >@ViewBag.productCount Ürün</div>
                <div class="col text-right">@basketTotalPrice ₺</div>
            </div>

            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">Kdv Oranı</div>
                <div class="col text-right">8%</div>
            </div>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">Toplam Tutar</div>
                <div class="col text-right">@basketTotalPriceWithTax ₺</div>
            </div>

            <button type="button" class="btn btn-success" id="btnchecked" style="float:inline-end;margin-top:1.2rem !important">Siparişi Tamamla</button>

        </div>
    </div>

</div>

<br />
<br />