@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<div class="content">
    <div class="col-8">
    <div class="container-fluid">
        <h4 class="page-title">Mail Gönderme İşlemi</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="form-group">
                        <label for="InputReceiverMail">Alıcı Mail Adresi</label>
                        <input type="email" class="form-control" asp-for="ReceiverMail" id="InputReceiverMail">
                    </div>
                    <div class="form-group">
                        <label for="InputSubject">Konu</label>
                        <input type="text" class="form-control" asp-for="Subject" id="InputSubject">
                    </div>
                    <div class="form-group">
                        <label for="InputBody">Mesajınız</label>
                        <textarea rows="5" type="text" class="form-control" asp-for="Body" id="InputBody"></textarea>
                    </div>
                  

                    <button type="submit" class="btn btn-primary">Mail Gönder</button>
                </form>

            </div>
        </div>

        </div>
    </div>
</div>
