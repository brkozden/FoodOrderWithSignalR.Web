@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-8">
        <h4 class="page-title">Profil Düzenleme İşlemi</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="form-group">
                        <label for="InputName">Adınız</label>
                        <input type="text" class="form-control" asp-for="Name" id="InputName">
                    </div>
                    <div class="form-group">
                        <label for="InputSurname">Soyadınız</label>
                        <input type="text" class="form-control" asp-for="Surname" id="InputSurname">
                    </div>
                    <div class="form-group">
                        <label for="InputUsername">Kullanıcı Adı</label>
                        <input type="text" class="form-control" asp-for="Username" id="InputUsername">
                    </div>
                    <div class="form-group">
                        <label for="InputMail">Mail</label>
                        <input type="email" class="form-control" asp-for="Mail" id="InputMail">
                    </div>

                    <div class="form-group">
                        <label for="InputPassword">Şifreniz</label>
                        <input type="password" class="form-control" asp-for="Password" id="InputPassword">
                    </div>
                    <div class="form-group">
                        <label for="InputConfirmPassword">Şifreniz (Tekrar)</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword"  id="InputConfirmPassword">
                    </div>


                    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                </form>
                
            </div>
        </div>
        </div>
    </div>
</div>
