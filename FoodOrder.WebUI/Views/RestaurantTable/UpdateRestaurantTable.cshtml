@model UpdateRestaurantTableDto
@{
    ViewData["Title"] = "UpdateRestaurantTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Masa Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="RestaurantTableId" />
                            <div class="form-group">
                                <label for="RestaurantTableName">Masa Adı</label>
                                <input type="text" class="form-control form-control" asp-for="Name" id="RestaurantTableName">
                            </div>
                            <div class="form-group">
                                <label for="RestaurantTableStatus">Durum</label>
                                <select class="form-control form-control" asp-for="Status" id="RestaurantTableStatus">
                                    <option value="false">Boş</option>
                                    <option value="true">Dolu</option>

                                </select>
                            </div>


                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                            <a href="/RestaurantTable/Index/" class="btn btn-danger">İptal Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
