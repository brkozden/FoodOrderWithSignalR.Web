@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Günün İndirimli Ürünü Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountId" />
                            <div class="form-group">
                                <label for="Title">Başlık</label>
                                <input type="text" class="form-control " asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control " asp-for="Description" id="Description">
                            </div>
                            <div class="form-group">
                                <label for="Amount">İndirim Tutarı</label>
                                <input type="text" class="form-control " asp-for="Amount" id="Amount">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Resim Yükle</label>
                                <input type="text" class="form-control " asp-for="ImageUrl" id="ImageUrl">
                            </div>



                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirim Bilgisini Güncelle</button>
                            <a href="/Discount/Index/" class="btn btn-danger">İptal Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

