@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>


                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimleri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Temayı bozmamak için maksimum <b>2 adet</b> veri giriniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Görsel</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Amount</td>
                                        <td>Aktif</td>
                                        <td><a class="btn btn-outline-warning" href="/Discount/RemoveDiscount/@item.DiscountId">Durum</a></td>
                                        <td><a class="btn btn-outline-danger" href="/Discount/RemoveDiscount/@item.DiscountId">Sil</a></td>
                                        <td><a class="btn btn-outline-primary" href="/Discount/UpdateDiscount/@item.DiscountId">Güncelle</a></td>




                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                    <a class="btn btn-success text-white" href="/Discount/CreateDiscount/">Yeni İndirim Ekle</a>
                </div>

            </div>

        </div>
    </div>
</div>



