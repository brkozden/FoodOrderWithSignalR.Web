@model List<ResultSocialMediaDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgileri Listesi</div>
					</div>


					<div class="card-body">
						<div class="card-sub">
							Sosyal medya bilgileri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Sosyal Medya Platformu</th>
									<th scope="col">Url</th>
									<th scope="col">Icon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a class="btn btn-outline-danger" href="/SocialMedia/RemoveSocialMedia/@item.SocialMediaId">Sil</a></td>
										<td><a class="btn btn-outline-primary" href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId">Güncelle</a></td>




									</tr>
								}


							</tbody>
						</table>

					</div>
					<a class="btn btn-success text-white" href="/SocialMedia/CreateSocialMedia/">Yeni Sosyal Medya Bilgisi Ekle</a>
				</div>

			</div>

		</div>
	</div>
</div>


