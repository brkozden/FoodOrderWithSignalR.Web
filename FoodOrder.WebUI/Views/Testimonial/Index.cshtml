@model List<ResultTestimonialDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mevcut Referans Bilgileri Listesi</div>
					</div>


					<div class="card-body">
						<div class="card-sub">
							Referans bilgileri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Referans Adı</th>
									<th scope="col">Unvan</th>
									<th scope="col">Yorum</th>
									<th scope="col">Görsel</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Title</td>
										<td>@item.Comment</td>
										<td>@item.ImageUrl</td>
										@if (item.Status == false)
										{
											<td>Beklemede</td>
										}
										else
										{
											<td>Yayında</td>
										}

										<td><a class="btn btn-outline-danger" href="/Testimonial/RemoveTestimonial/@item.TestimonialId">Sil</a></td>
										<td><a class="btn btn-outline-primary" href="/Testimonial/UpdateTestimonial/@item.TestimonialId">Güncelle</a></td>




									</tr>
								}


							</tbody>
						</table>

					</div>
					<a class="btn btn-success text-white" href="/Testimonial/CreateTestimonial/">Yeni Referans Bilgisi Ekle</a>
				</div>

			</div>

		</div>
	</div>
</div>



