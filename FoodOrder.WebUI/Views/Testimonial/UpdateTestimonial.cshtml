@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Referans Güncelleme İşlemi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label for="Name">Referans Adı</label>
                                <input type="text" class="form-control " asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Unvanı</label>
                                <input type="text" class="form-control " asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Görsel</label>
                                <input type="text" class="form-control " asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Yorum</label>
                                <textarea rows="4" type="text" class="form-control " asp-for="Comment" id="Comment"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Status">Durum</label>
                                <select class="form-control form-control" asp-for="Status" id="Status">
                                    <option value="false">Beklet</option>
                                    <option value="true">İşleme Al</option>

                                </select>
                            </div>



                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Referans Bilgisini Güncelle</button>
                            <a href="/Testimonial/Index/" class="btn btn-danger">İptal Et</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



